<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="180dp" />

            <gradient
                android:angle="0"
                android:centerColor="#c9c9c9"
                android:centerY="0.75"
                android:endColor="#c9c9c9"
                android:startColor="#c9c9c9" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>

                <corners android:radius="180dp" />

                <gradient
                    android:angle="0"
                    android:centerColor="#1497e5"
                    android:centerY="0.75"
                    android:endColor="#1497e5"
                    android:startColor="#1497e5" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="180dp" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/c1497e5"
                    android:startColor="@color/c1497e5" />
            </shape>
        </clip>
    </item>

</layer-list>