<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_400"
        android:layout_height="@dimen/dp_254"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_notice"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:focusable="false"
                    android:src="@drawable/icon_help" />

                <TextView
                    android:id="@+id/text_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:focusable="false"
                    android:text="确定删除该任务"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_36"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_checkbox"
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    android:background="@drawable/bg_focus"
                    android:focusable="true"
                    android:nextFocusDown="@+id/ll_sure"
                    android:nextFocusLeft="@null"
                    android:nextFocusRight="@null"
                    android:nextFocusUp="@null">

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_centerInParent="true"
                        android:focusable="false"
                        style="@style/CustomCheckBoxTheme"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="同时删除该文件"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="@dimen/dp_146"
                    android:layout_height="@dimen/dp_58"
                    android:background="@drawable/bg_button_foucse"
                    android:focusable="true"
                    android:text="@string/ensure"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/dp_146"
                    android:layout_height="@dimen/dp_58"
                    android:background="@drawable/bg_button_foucse"
                    android:focusable="true"
                    android:text="@string/cancel"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
