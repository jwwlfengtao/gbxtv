<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dp_427"
        android:layout_height="@dimen/dp_300"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入激活码"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/text_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_33"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_11" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center">


            <EditText
                android:id="@+id/edit"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_1"
                android:focusable="true"
                android:inputType="number"
                android:maxLength="8"
                android:nextFocusDown="@+id/btn_sure"
                android:nextFocusLeft="@null"
                android:nextFocusRight="@null"
                android:nextFocusUp="@null" />
            <!--验证码输入栏-->
            <LinearLayout
                android:id="@+id/ll_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_main_item"
                android:focusable="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/v1"
                    style="@style/code_text_style_coreLeft" />

                <ImageView

                    style="@style/vertical_line_style" />

                <TextView
                    android:id="@+id/v2"
                    style="@style/code_text_style" />

                <ImageView style="@style/vertical_line_style" />

                <TextView
                    android:id="@+id/v3"
                    style="@style/code_text_style" />

                <ImageView style="@style/vertical_line_style" />

                <TextView
                    android:id="@+id/v4"
                    style="@style/code_text_style" />

                <ImageView style="@style/vertical_line_style" />

                <TextView
                    android:id="@+id/v5"
                    style="@style/code_text_style" />

                <ImageView style="@style/vertical_line_style" />

                <TextView
                    android:id="@+id/v6"
                    style="@style/code_text_style" />

                <ImageView style="@style/vertical_line_style" />

                <TextView
                    android:id="@+id/v7"
                    style="@style/code_text_style" />

                <ImageView style="@style/vertical_line_style" />

                <TextView
                    android:id="@+id/v8"
                    style="@style/code_text_style_coreRight" />
            </LinearLayout>


        </FrameLayout>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="@dimen/dp_134"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_54"
            android:background="@drawable/bg_verify_bt"
            android:focusable="true"
            android:nextFocusDown="@null"
            android:nextFocusLeft="@null"
            android:nextFocusRight="@null"
            android:nextFocusUp="@+id/edit"
            android:text="@string/binding"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
